{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.9"
  },
  "steps": {
    "install": {
      "image": "ghcr.io/andrii-rieznik/python-gdal",
      "commands": [
        "python -m venv /app/.venv",
        "pip install -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "base": {
      "image": "ghcr.io/andrii-rieznik/python-gdal"
    },
    "startCommand": "celery -A core worker --loglevel=info && python manage.py migrate && gunicorn core.wsgi"
  }
}